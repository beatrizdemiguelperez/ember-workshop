{{! Bootstrap Navbar }}
<div class="container">

    <div class="navbar-header">
    	{{! Collapsed menu for small screens }}
		<button {{action 'toggleMenu'}} type="button" class="navbar-toggle {{unless isMenuOpened 'collapsed'}}" data-toggle="collapse" data-target="#navbar" aria-controls="navbar">
			<span class="sr-only">Toggle navigation</span>
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
		</button>

    	{{! Brand with link }}
    	{{link-to appName "index" class="navbar-brand"}}
    </div>

    <div class="collapse navbar-collapse {{if isMenuOpened 'in'}}" id="navbar">

    	{{! Menu links}}
        <ul class="nav navbar-nav">
        	{{#each menuLinks as |link|}}
            	{{#link-to link.url tagName="li"}}
            		<a href="">{{t link.label}}</a>
            	{{/link-to}}
            {{/each}}
        </ul>

    </div>

</div>
